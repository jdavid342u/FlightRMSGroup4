<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightRMSGroup4.WelcomePage">
    <ScrollView>
        <VerticalStackLayout>
            <Grid Margin="5" x:Name="mainButtons_grd">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Text="Main Page" x:Name="main_btn" Clicked="OnClick_Main" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" BackgroundColor="#b5b5b5" TextColor="Black" />
                
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>